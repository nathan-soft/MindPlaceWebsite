@page
@model MindPlaceClient.Pages.Public.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="vertical-align-wrap">
    <div class="vertical-align-middle">
        <div class="auth-box h-auto">
            <div class="left">
                <div class="content">
                    <div class="header">
                        <div class="text-center">
                            <img src="~/assets/img/logo-dark.png" style="width: 200px" alt="mindsplace Logo">
                        </div>
                        <p class="lead">Reset your account password</p>
                        @if (ViewData.ContainsKey("ResetPasswordSuccess"))
                        {
                            <p class="text-center text-success font-weight-bold">
                                @ViewData["ResetPasswordSuccess"] Please <a asp-page='Login'>click here</a> to log in.
                            </p>
                        }

                    </div>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-left"></div>
                        <div class="form-auth-small">
                            <div class="form-group">
                                <label asp-for="ResetPasswordDetails.Password" class="control-label sr-only">Password</label>
                                <div class="passwordFieldContainer position-relative">
                                    <input asp-for="ResetPasswordDetails.Password" class="form-control" type="password" placeholder="Password" />
                                    <i class="fa fa-eye-slash togglePassword"></i>
                                </div>
                                <span asp-validation-for="ResetPasswordDetails.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ResetPasswordDetails.ConfirmPassword" class="control-label sr-only">Password</label>
                                <div class="passwordFieldContainer position-relative">
                                    <input asp-for="ResetPasswordDetails.ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                                    <i class="fa fa-eye-slash togglePassword"></i>
                                </div>
                                <span asp-validation-for="ResetPasswordDetails.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="hidden" asp-for="ResetPasswordDetails.Token" class="form-control" placeholder="Reset Token" />
                            </div>
                            <div class="form-group">
                                <input type="hidden" asp-for="ResetPasswordDetails.Username" class="form-control" placeholder="Username" />
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg btn-block text-white">RESET</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
